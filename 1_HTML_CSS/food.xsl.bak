<?xml version="1.0" encoding="UTF-8"?>
<html xsl:version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<body style="font-family:Arial;font-size:12pt;background-color:#EEEEEE">
<xsl:for-each select="event_menu/event">


<div style="background-color:yellow;color:blue;padding:4px;font-weight:bold;font-size:15pt"> 
		<xsl:value-of select="day"/>
		</div>


	<div style="background-color:teal;color:white;padding:4px;font-weight:bold;">
		<xsl:value-of select="name"/>
	</div>
	
    <div style="margin-left:20px;margin-bottom:1em;font-size:10pt">	
		<xsl:value-of select="price"/><br/>
		<xsl:value-of select="time"/><br/>
		<xsl:value-of select="description"/><br/>
		<xsl:value-of select="Coordinator"/><br/>
	</div>


</xsl:for-each>
</body>
</html> 